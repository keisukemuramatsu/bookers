<body>
  <h2>Editing Book</h2>
  <%= form_with model:@book, local:true do |f| %>
     <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
    </div>
    <div class="field">
    <%= f.submit 'Update Book' %>
    </div>
    <a>Show|Back</a>
  <% end %>
</body>