<body>
  <h1>Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
    <%= render 'layouts/error_messages', resource: @book %>
    <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
    </div>
    <div class="field">
    <%= f.submit 'Update Book' %>
    </div>
    <p><%= link_to "Show", book_path(@book.id) %> |<%= link_to "Back", books_path %> </p>
  <% end %>
</body>