<body>
  <% if flash[:notice] %>
  <p id='notice'>
    <%= flash[:notice] %>
  </p>
  <% end %>
<h1>Books</h1>
  <table>
    <thead>
      <tr>
      　<th><h4>Title</h4></th>
　　    <th><h4>Body</h4></th>
    　　  <th colspan="3"></th>
　　  </tr>
　　</thead>
　　<tbody>
    　<% @books.each do |book| %>
    　<tr>
    　　  <td><%= book.title %></td>
　　    <td><%= book.body %></td>
    　　  <td><%= link_to "Show", book_path(book.id) %></td>
　　    <td><%= link_to "Edit", edit_book_path(book.id) %> </td>
　　    <td><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: 'Are you sure?'} %> </td>
      </tr>
      <% end %>
    <tbody>
  </table>
  <h2>New book</h2>
    <%= render 'layouts/error_messages', resource: @book %>
       <%= form_with model:@book, url:'/books', local:true do |f| %>
    <div class="field">
      <label class="field_with_errors">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label class="field_with_errors">Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="field">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</body>